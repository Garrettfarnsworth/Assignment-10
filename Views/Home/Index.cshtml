@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<div class="text-center m-1 p-2" style="background-color: #5D737E">
    <div class="m-4">
        @if (Model.TeamName == null)
        {
            <h2 class="display-4">All Teams</h2>
        }
        else
        {
            <h2 class="display-4">@Model.TeamName</h2>
        }
    </div>
    @foreach (var x in Model.Bowlers)
    {
        <div class="card text-center m-1" style="background-color: #EAF8BF">
            <div class="card-body">
                <h5 class="card-title">@x.BowlerFirstName @x.BowlerMiddleInit @x.BowlerLastName</h5>
                <p class="card-text">
                    <span class="font-weight-bold">Address:</span>
                    @x.BowlerAddress<br />
                    @x.BowlerCity, @x.BowlerState @x.BowlerZip
                </p>
                <p><span class="font-weight-bold">Phone Number:</span> @x.BowlerPhoneNumber</p>
            </div>
        </div>
    }
</div>

<div page-info="@Model.PageNumbering"
     page-url-teamName="@Model.TeamName"
     page-classes-enabled="true"
     page-class="btn"
     page-class-normal="btn-primary"
     page-class-selected="btn-dark"
     class="btn-group pull-right m-1">

</div>
